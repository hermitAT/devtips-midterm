<% if (user.id) { // @TODO When user isn't logged in %>
<div id="compose-tips" class="container my-4">
  <div class="row no-gutter justify-content-center">
    <div class="col col-sm-10 col-md-12 col-lg-8">
      <div class="card bg-white mb-3 shadow-md">
        <form id="form-compose" method="POST" action="/">
          <div class="form-group row px-3 py-2 mb-0">
            <div class="col-sm-2 d-flex justify-content-center align-items-center">
              <img class="rounded-circle img-thumbnail p-0 shadow-sm" height="64" width="64" src="https://avatars.dicebear.com/4.4/api/avataaars/<%= user.id %>.svg">
            </div>
            <div class="form-group col-sm-10 py-4 px-0 mb-0">
              <textarea id="compose-textarea-title" class="form-control form-control-lg textarea border-0 px-0" name="title" rows="1" data-min-rows='1' placeholder="Whaddya want to call your tip?" autofocus></textarea>
              <textarea id="compose-textarea-data" style="display: none;" class="form-control form-control-lg textarea border-0 px-0" name="data" rows="1" data-min-rows='1' placeholder="What's the data?" autofocus></textarea>
              <div id="compose-metadata" class="mr-4" style="display: none;">
                <textarea id="compose-textarea-description" class="form-control form-control-lg textarea border-0 px-0 mb-3" name="description" rows="1" data-min-rows='1' placeholder="Choose a succinct desctiption" autofocus></textarea>
                <input id="compose-input-tags" class="form-control pr-4" name="tags" style="flex: 1;" type="tags" placeholder="Tags (comma separated)" aria-label="Tags">
              </div>
            </div>
          </div>
          <ul class="nav nav-pills nav-fill border-top">
            <li class="nav-item border-right" data-type="link">
              <a class="type-select nav-link py-3 active" href="#" data-type="link">Link</a>
            </li>
            <li class="nav-item border-right">
              <a class="type-select nav-link py-3" href="#" data-type="image">Image</a>
            </li>
            <li class="nav-item border-right">
              <a class="type-select nav-link py-3" href="#" data-type="video">Video</a>
            </li>
            <li class="nav-item border-right">
              <a class="type-select nav-link py-3" href="#" data-type="markdown">Markdown</a>
            </li>
            <li class="nav-item">
              <a class="type-select nav-link py-3" href="#" data-type="code">Code</a>
            </li>
            <li class="nav-item">
              <a id="form-compose-submit" class="nav-link py-3 bg-primary text-white rounded-0" href="#" tabindex="-1" aria-disabled="true">Post</a>
            </li>
          </ul>
          <select name="type" id="compose-type" style="display: none;">
            <option value="link" selected>link</option>
            <option value="image">image</option>
            <option value="video">video</option>
            <option value="markdown" >markdown</option>
            <option value="code">code</option>
          </select>
        </form>
      </div>
    </div>
  </div>
</div>
<% } %>
